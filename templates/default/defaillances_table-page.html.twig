{% extends 'admin-dashboard.html.twig' %}
{% block title %}Liste des Défaillances{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{asset('css/techniqueHistorique.css')  }}" />
{% endblock %}
{% block body %}
<div class="intro-y datatable-wrapper box p-5 mt-5">
    <table  class="table table-report table-report--bordered display datatable w-full"  id="myTable">
        <thead>
        <tr>
            <th>defaillance</th>
            <th>libelle</th>
            <th>type de défaillance</th>
        </tr>
        </thead>
        <tbody>
        {% for def in defaillances %}
            <tr>
                <td><a href="{{ path('administrer_defaillance',{'id':def.id}) }}" >{{ def.id }}</a></td>
                <td>{{ def.libelle }}</td>
                <td><a href="{{ path('administrer_type_defaillance',{'id':def.typeDefaillance.id}) }}">{{ def.typeDefaillance.nom }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block js %}
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        } );
    </script>

{% endblock %}