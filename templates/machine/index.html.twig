<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
</head>

<title>Machine index</title>

<body>
    <h1>Machine index</h1>

    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_machine</th>
                <th>Date_install</th>
                <th>DocumentName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.nomMachine }}</td>
                <td>{{ machine.dateInstall ? machine.dateInstall|date('Y-m-d') : '' }}</td>
                <td>{{ machine.documentName }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
</body>

<script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<script>
    $(document).ready( function () {
        $('#myTable').DataTable();
    } );
</script>
